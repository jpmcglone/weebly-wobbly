@font-face
  font-family "8-Bit-Madness"
  src url(8-Bit-Madness.ttf)

color-1 = #fe0000
color-2 = #ffe503
color-3 = #49fd01
color-4 = #fe9ebb
color-5 = #ff7e00

body.eight-bit
  background-color color-1
  color color-2
  cursor url(http://www.rw-designer.com/cursor-view/7069.gif), auto
  font-family "8-Bit-Madness"

  #header, #mobile-nav
    background-color color-3
    color color-4

  a
    color color-5

  ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, body, html, p, blockquote, fieldset, input, iframe, img
    font-family "8-Bit-Madness"

  #banner
    .banner-content
      background-image url(https://pbs.twimg.com/media/B5MlRY6CAAAiKxR.png)
      background-repeat no-repeat
      background-size cover

  #wsite-content h2
    font-size 4em
